<div class="container">
    <h3 class="text-center mt-2"><b>DANH MỤC THUỐC</b></h3>
    <table id="example" class="table table-striped" style="width:100%;background-color: rgb(204, 248, 204);">
        <thead>
            <tr>
                <th>Tên thuốc</th>
                <th>ĐV</th>
                <th>Giá</th>
                <th>SL</th>
                <th>Hoạt chất</th>
                <th>Công dụng</th>
            </tr>
        </thead>
        <tbody>
            {{#each drugs}}
            <tr>
                <td><a href="/thuoc/{{ID}}-{{Name}}">{{Name}}</a></td>
                <td>{{Unit}}</td>
                <td>{{Price}}</td>
                <td>{{Quantity}}</td>
                <td>{{Chemicals}}</td>
                <td>{{Uses}}</td>
            </tr>
            {{/each}}
        <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>